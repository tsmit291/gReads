extends layout

block content
  if obj
  
  div.container
    div.authorsDiv
      div.authorBook
        for books in obj
          p= books.title
        a.bookTitle(href='/books')
          h1 Books
          
    div.booksDiv
      div.bookAuthor
        for author in authorobj
          p= author.f_name + " " + author.l_name
        a.authorTitle(href='/authors')
          h1 Authors
        
