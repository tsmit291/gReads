extends ../layout

block content  
  div.editBook
    form(name="bookEdit", action="/books", method="post")
      label(for="title") Title
      br
      input(type="text", name="title", value='#{booksNew.title}')
      br
      label(for="genre") Genre
      br
      input(type="text", name="genre", value='#{booksNew.genre}')
      br
      label(for="cover_url") Cover Image URL
      br
      input(type="text", name="cover_url", value='#{booksNew.cover_url')
      br
      label(for="description") Description
      br
      textarea(name="content", rows="5", cols="40", value='#{booksNew.description}')
      br
      label(for="newAuth") New Author
      br
      textarea(row="5", col="30", value='#{authors.fullName}')
      br
      input(type="submit", name="removeAuthor") Remove Author
      br
      select(name="authors")
        option(value='1') Alex Martelli
        option(value='2') Anna Ravenscroft
        option(value='3') Steve Holden
        option(value='4') Allen B. Downey
        option(value='5') Bonnie Eisenman
        option(value='6') Kyle Simpson

    input(type="submit", name="addAuth", id="addAuth") Add Author
    input(type="submit", name="addBook", id="addBook") Add Book
     
